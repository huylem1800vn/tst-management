extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-error()
  +alert-success()

  .container.my-3
    .row
      .col-12
        +box-head("Thông tin tài khoản")

    .card
          .card-body
            .row.mb-3
              .col-md-6
                strong Họ và tên: 
                | #{infoUser.fullName}
              .col-md-6
                strong Email:
                | #{infoUser.email} 
              .col-md-6
                - var dob = new Date(infoUser.dateOfBirth);
                - var formattedDOB = dob.toLocaleDateString('vi-VN');
                strong Ngày tháng năm sinh:
                | #{formattedDOB}
              .col-md-6
                strong Học vấn:
                | #{infoUser.education}
              .col-md-6
                strong Đơn vị công tác:
                | #{infoUser.organization}
              .col-md-6
                strong Kỹ năng chuyên môn:
                | #{infoUser.skills}
              .col-md-6
                strong Mạng lưới kết nối:
                | #{infoUser.networks}
            form(
              action="/user/updateInfo"
              method="GET"
            )
              div(class="form-group")
                button(
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Cập nhật thông tin