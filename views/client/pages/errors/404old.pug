doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 404 Page Not Found
    style.
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f3f3f3;
      }

      .container {
        text-align: center;
      }

      h1 {
        font-size: 10rem;
        margin: 0;
      }

      p {
        color: #666;
        margin: 10px 0;
      }

      button {
        background-color: #000;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 1rem;
      }

      button:hover {
        background-color: #333;
      }
  body
    .container
      .content
        h1 404
        p Oops, This Page Not Found!
        p The link might be corrupted, or the page may have been removed
        button(onclick="goBackHome()") GO BACK HOME
    script.
      function goBackHome() {
        window.location.href = '/';
      }